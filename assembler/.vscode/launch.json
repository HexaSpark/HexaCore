{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'assembler'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=assembler",
                    "--package=assembler",
                ],
                "filter": {
                    "name": "assembler",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'assembler'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=assembler",
                    "--package=assembler",
                ],
                "filter": {
                    "name": "assembler",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}